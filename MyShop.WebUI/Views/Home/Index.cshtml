@model MyShop.Core.ViewModels.ProductListViewModel

@{
    ViewBag.Title = "Home Page";
}

<h1>Products</h1>

<div class="col-md-2">
    <h4>Filter by Category</h4>
    <div class="list-group">
        @Html.ActionLink("All", "Index", null, new { @class= Request["Category"] == null ? "list-group-item active" : "list-group-item" })
        @foreach (var item in Model.ProductCategories)
        {
            @Html.ActionLink(item.Category, "Index", new { Category = item.Category }, new { @class = Request["Category"] == item.Category ? "list-group-item active" : "list-group-item" })
        }
    </div>
</div>

<div class="col-md-10">
    @foreach (var item in Model.Product)
    {
        <div class="col-md-2" style="height:200px; padding:10px;margin:10px; border: solid thin whitesmoke">
            <div class="col-md-12">
                <img class="img-rounded" src="~/Content/ProductImages/@item.Image" style="height: 100px" />
            </div>

            <div class="col-md-12">
                <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
            </div>

            <div class="col-md-12">
                <p>@item.Description</p>
            </div>

            <div class="col-md-12">
                <h4>@item.Price</h4>
            </div>

            <div class="col-md-12">
                <a href="#" class="btn btn-default">Add to Basket</a>
            </div>
        </div>
    }
</div>



<div class="col-md-12 clearfix"></div>